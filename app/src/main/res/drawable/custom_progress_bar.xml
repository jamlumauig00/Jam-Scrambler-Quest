<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#ED2C2C" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius if needed -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/black" /> <!-- Progress color -->
                <corners android:radius="8dp" /> <!-- Adjust corner radius if needed -->
            </shape>
        </clip>
    </item>
</layer-list>
